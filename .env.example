# ============================================================================
# UMKM Terminal - Clanker SDK v4.25
# ============================================================================
# Docs: https://clanker.gitbook.io/clanker-documentation
# ============================================================================

# ─────────────────────────────────────────────────────────────────────────────
# REQUIRED
# ─────────────────────────────────────────────────────────────────────────────

PRIVATE_KEY=0x...

# ─────────────────────────────────────────────────────────────────────────────
# CHAIN
# ─────────────────────────────────────────────────────────────────────────────

# 8453 = Base (default) | 1 = ETH | 42161 = Arbitrum | 130 = Unichain
CHAIN_ID=8453

# ─────────────────────────────────────────────────────────────────────────────
# TOKEN ADMIN & REWARDS
# ─────────────────────────────────────────────────────────────────────────────

# Token admin address (default: deployer)
# TOKEN_ADMIN=0x...

# Reward recipient - receives 100% trading fees (default: deployer)
# REWARD_RECIPIENT=0x...

# Reward token type: Both | Paired | Clanker (default: Paired)
# - Paired = receive fees in WETH
# - Clanker = receive fees in the token
# - Both = receive fees in both
REWARD_TOKEN=Paired

# ─────────────────────────────────────────────────────────────────────────────
# FEE CONFIGURATION
# ─────────────────────────────────────────────────────────────────────────────

# Fee type: static | dynamic (default: static)
FEE_TYPE=static

# Static fees (0-5%, default: 1%)
CLANKER_FEE=1
PAIRED_FEE=1

# ─────────────────────────────────────────────────────────────────────────────
# MEV PROTECTION (Enabled by default)
# ─────────────────────────────────────────────────────────────────────────────

# Block delay (default: 8, higher = safer from snipers)
MEV_BLOCK_DELAY=8

# ─────────────────────────────────────────────────────────────────────────────
# CLANKER.WORLD VERIFICATION
# ─────────────────────────────────────────────────────────────────────────────

INTERFACE_NAME=UMKM Terminal
PLATFORM_NAME=Clanker

# ─────────────────────────────────────────────────────────────────────────────
# DISABLED FEATURES (hardcoded off)
# ─────────────────────────────────────────────────────────────────────────────
# Vault, Vesting, Airdrop are disabled by default
# These features can be enabled programmatically via SDK
