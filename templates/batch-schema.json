{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Batch Deploy Template",
  "type": "object",
  "required": ["tokens"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Template name"
    },
    "description": {
      "type": "string",
      "description": "Template description"
    },
    "chain": {
      "type": "string",
      "enum": ["base", "ethereum", "arbitrum", "unichain", "monad"],
      "default": "base",
      "description": "Target chain"
    },
    "defaults": {
      "type": "object",
      "properties": {
        "fee": {
          "type": "number",
          "minimum": 1,
          "maximum": 80,
          "default": 5,
          "description": "Fee percentage (1-80%)"
        },
        "mev": {
          "type": "number",
          "minimum": 0,
          "maximum": 20,
          "default": 8,
          "description": "MEV protection blocks (0 = disabled)"
        },
        "tokenAdmin": {
          "type": "string",
          "pattern": "^(0x[a-fA-F0-9]{40})?$",
          "description": "Default token admin address"
        },
        "rewardRecipient": {
          "type": "string",
          "pattern": "^(0x[a-fA-F0-9]{40})?$",
          "description": "Default reward recipient address"
        }
      }
    },
    "tokens": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "type": "object",
        "required": ["name", "symbol"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Token name"
          },
          "symbol": {
            "type": "string",
            "maxLength": 10,
            "description": "Token symbol (max 10 chars)"
          },
          "image": {
            "type": "string",
            "description": "Token image URL"
          },
          "description": {
            "type": "string",
            "description": "Token description"
          },
          "tokenAdmin": {
            "type": "string",
            "pattern": "^(0x[a-fA-F0-9]{40})?$",
            "description": "Token admin (overrides default)"
          },
          "rewardRecipient": {
            "type": "string",
            "pattern": "^(0x[a-fA-F0-9]{40})?$",
            "description": "Reward recipient (overrides default)"
          }
        }
      }
    }
  }
}
