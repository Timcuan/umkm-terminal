# ============================================================================
# UMKM Terminal - Clanker SDK v4.25
# ============================================================================
# Docs: https://clanker.gitbook.io/clanker-documentation
# ============================================================================

# ─────────────────────────────────────────────────────────────────────────────
# REQUIRED
# ─────────────────────────────────────────────────────────────────────────────

PRIVATE_KEY=0x...

# ─────────────────────────────────────────────────────────────────────────────
# CHAIN
# ─────────────────────────────────────────────────────────────────────────────

# 8453 = Base (default) | 1 = ETH | 42161 = Arbitrum | 130 = Unichain | 10143 = Monad
CHAIN_ID=8453

# ─────────────────────────────────────────────────────────────────────────────
# TOKEN DEFAULTS (Single & Batch Deploy)
# ─────────────────────────────────────────────────────────────────────────────

# Default token name (optional, for batch deploy)
# TOKEN_NAME=My Token

# Default token symbol (optional, for batch deploy)
# TOKEN_SYMBOL=MTK

# Default token image URL
# TOKEN_IMAGE=https://example.com/token.png

# Default token description
# TOKEN_DESCRIPTION=My awesome token

# ─────────────────────────────────────────────────────────────────────────────
# TOKEN ADMIN & REWARDS
# ─────────────────────────────────────────────────────────────────────────────

# Token admin address (default: deployer)
# TOKEN_ADMIN=0x...

# Reward recipient - receives 100% trading fees (default: deployer)
# REWARD_RECIPIENT=0x...

# Reward token type: Both | Paired | Clanker (default: Paired)
# - Paired = receive fees in WETH
# - Clanker = receive fees in the token
# - Both = receive fees in both
REWARD_TOKEN=Paired

# ─────────────────────────────────────────────────────────────────────────────
# FEE CONFIGURATION
# ─────────────────────────────────────────────────────────────────────────────

# Fee type: static | dynamic (default: static)
FEE_TYPE=static

# Static fees (1-80%, default: 5%)
CLANKER_FEE=5
PAIRED_FEE=5

# ─────────────────────────────────────────────────────────────────────────────
# MEV PROTECTION (Enabled by default)
# ─────────────────────────────────────────────────────────────────────────────

# Block delay (0-20, default: 8, higher = safer from snipers)
MEV_BLOCK_DELAY=8

# ─────────────────────────────────────────────────────────────────────────────
# SOCIAL LINKS (Optional)
# ─────────────────────────────────────────────────────────────────────────────

# TOKEN_WEBSITE=https://example.com
# TOKEN_TWITTER=https://twitter.com/example
# TOKEN_TELEGRAM=https://t.me/example
# TOKEN_DISCORD=https://discord.gg/example
# TOKEN_FARCASTER=example

# ─────────────────────────────────────────────────────────────────────────────
# VANITY ADDRESS (Optional)
# ─────────────────────────────────────────────────────────────────────────────

# Custom suffix for token address (3 hex chars max)
# VANITY_SUFFIX=420

# ─────────────────────────────────────────────────────────────────────────────
# BATCH DEPLOY SETTINGS
# ─────────────────────────────────────────────────────────────────────────────

# Default number of tokens per batch
BATCH_COUNT=5

# Delay between deploys in seconds
BATCH_DELAY=3

# Retry attempts on failure
BATCH_RETRIES=2

# ─────────────────────────────────────────────────────────────────────────────
# CLANKER.WORLD VERIFICATION
# ─────────────────────────────────────────────────────────────────────────────

INTERFACE_NAME=UMKM Terminal
PLATFORM_NAME=Clanker

# ─────────────────────────────────────────────────────────────────────────────
# VAULT SETTINGS (Disabled by default)
# ─────────────────────────────────────────────────────────────────────────────

# Enable vault: true | false
# VAULT_ENABLED=false

# Vault percentage (1-90%)
# VAULT_PERCENTAGE=10

# Lockup duration in days (min 7)
# VAULT_LOCKUP_DAYS=30

# Vesting duration in days (0 = instant)
# VAULT_VESTING_DAYS=0
